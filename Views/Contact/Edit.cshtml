@model mvc_project.Models.Contact

@{
    ViewData["Title"] = "Edit a contact";
}

<h1>Edit a contact </h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div>
                <label asp-for="Id" class="control-label"></label></>
                <input asp-for="Id" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control"></input>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="Active" class="control-label"></label>
                <input type="checkbox" asp-for="Active" class="form-check-input"></input>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" value="Edit" class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back</a>
</div>