@model mvc_project.Models.Contact

@{
    ViewData["Title"] = "Create new contact";
}

<h1>Create new contact</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control"></input>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <label asp-for="Active" class="control-label"></label>
                <input type="checkbox" asp-for="Active" class="form-check-input"></input>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" value="create" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back</a>
</div>